@model IEnumerable<UpSkillz.Models.Lesson>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lessons for the course enrolled";
    bool isFirst = true; // to identify the first lesson
}

<h5>Lessons for the course enrolled</h5>
<h1>@ViewBag.courseTitle</h1>

<div class="d-flex align-items-start my-5">
    <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        @foreach (var lesson in Model)
        {
            <a href="#v-pills-@lesson.LessonId"
               class="nav-link nav-link-upskillz text-dark d-flex gap-3 py-3 @(isFirst ? "active" : "")"
               id="v-pills-@lesson.LessonId-tab"
               data-bs-toggle="pill"
               data-bs-target="#v-pills-@lesson.LessonId"
               role="tab"
               aria-controls="v-pills-@lesson.LessonId"
               aria-selected="@(isFirst.ToString().ToLower())">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                    <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783"/>
                </svg>
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <h6 class="mb-0">@lesson.Title</h6>
                    </div>
                    <!-- Check if the lesson is completed -->
                    <small class="opacity-50 text-nowrap">
                        @if (lesson.StudentsLessons?.Any(sl => sl.IsCompleted) == true)
                        {
                            <span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                    <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
                                </svg>

                            </span>
                        }
                    </small>
                </div>
            </a>
            isFirst = false; // mark next items as not the first
        }
    </div>

    <div class="tab-content w-100" id="v-pills-tabContent">
         @{
            isFirst = true; // for the first item
        }
        @foreach (var lesson in Model)
        {
            <div class="tab-pane fade @(isFirst ? "show active" : "")"
                 id="v-pills-@lesson.LessonId"
                 role="tabpanel"
                 aria-labelledby="v-pills-@lesson.LessonId-tab">
                <h4>@lesson.Title</h4>
                <p>@lesson.Content</p>


                
                        @if (lesson.StudentsLessons?.Any(sl => sl.IsCompleted) == true)
                        {
                            <!-- disabled button "Completed" -->
                             <button class="btn btn-secondary" disabled>Completed</button>
                        } else 
                        {
                            <a href="#" class="btn btn-upskillz">Complete</a>
                        } 

            </div>
            isFirst = false; // mark next items as not the first
        }
    </div>
</div>
