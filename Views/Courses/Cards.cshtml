@model IEnumerable<UpSkillz.Models.Course>

<div class="album py-2 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @if (Model != null && Model.Any())
            {
                @foreach (var course in Model)
                {
                    <div class="col">
                        <div class="card shadow-sm d-flex flex-column h-100">
                            <img class="card-img-top" width="100%" height="225" 
                            src="@(!string.IsNullOrEmpty(course.imageUrl) ? course.imageUrl : Url.Content("~/images/courses-1.jpg"))" />
                            <div class="card-body d-flex flex-column flex-grow-1">
                                <h5 class="card-title">@course.Title</h5>

                                @{
                                    var maxLength = 100; // Number of characters to show
                                    var description = course.Description;

                                    if (description.Length > maxLength)
                                    {
                                        description = description.Substring(0, maxLength) + "...";
                                    }
                                }
                                <p class="card-text">@description</p>

                                <div class="mt-auto">
                                    <div class="btn-group">
                                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No courses available at the moment.</p>
            }
        </div>
    </div>
</div>
